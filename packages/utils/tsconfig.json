{
  "extends": "@dsc/configs/tsconfig.svelte.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@dsc/utils": ["index.ts"],
      "@dsc/utils/node": ["index-node.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["src/index*.ts", "src/**/*node*.ts",
    "src/node/node-path.ts",
    "src/node/index-node.ts"
  ]
}
